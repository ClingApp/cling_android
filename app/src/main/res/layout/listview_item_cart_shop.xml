<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/red"
    android:orientation="horizontal">

    <ImageView
        android:layout_margin="@dimen/margin_medium"
        android:layout_width="@dimen/seller_image_size"
        android:layout_height="@dimen/seller_image_size"
        android:src="@drawable/ic_profile"
        android:id="@+id/cartItemShopImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop/seller name"
        android:padding="@dimen/margin_medium"
        android:id="@+id/cartItemShopNameTextView" />

    <Button
        style="@style/RoundedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:focusable="false"
        android:id="@+id/cartItemShopBuyButton"
        android:text="BUY"/>

</LinearLayout>