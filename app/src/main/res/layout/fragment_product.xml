<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cling.cling.Fragments.ProductFragment">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/cyan"
                android:paddingBottom="15dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/productViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/productNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productViewPager"
                    android:padding="10dp"
                    android:text="Название продукта"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/productDescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/productNameTextView"
                    android:layout_toLeftOf="@+id/productPriceTextView"
                    android:layout_toStartOf="@+id/productPriceTextView"
                    android:padding="10dp"
                    android:text="Ыпуклый, разделенный дугообразными чешуйками живот, на верхушке которого еле держалось готовое вот-вот окончательно сползти "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/productPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/productNameTextView"
                    android:padding="10dp"
                    android:text="1999 руб"
                    android:textColor="@color/white"
                    android:textSize="29sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/productBuyButton"
                    style="@style/RoundedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/productDescriptionTextView"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/background_rounded_white"
                    android:padding="15dp"
                    android:text="@string/buy" />

                <include
                    layout="@layout/view_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/productBuyButton"
                    android:layout_alignEnd="@+id/productPriceTextView"
                    android:layout_alignRight="@+id/productPriceTextView"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
