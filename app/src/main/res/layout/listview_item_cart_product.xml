<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/product_cart_item_height"
    android:background="@drawable/selector_listview_basic">

    <View
        android:id="@+id/separatorView"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/red" />

    <ImageView
        android:id="@+id/cartItemProductImage"
        android:layout_width="@dimen/cart_product_image_size"
        android:layout_height="@dimen/cart_product_image_size"
        android:layout_toEndOf="@+id/separatorView"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logo"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/separatorView"
        android:layout_margin="@dimen/margin_default" />

    <TextView
        android:id="@+id/cartItemProductNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/cartItemProductImage"
        android:layout_toLeftOf="@+id/cartItemProductPriceTextView"
        android:layout_toRightOf="@+id/cartItemProductImage"
        android:layout_toStartOf="@+id/cartItemProductPriceTextView"
        android:padding="@dimen/margin_default"
        android:text="Product name"
        android:textSize="@dimen/text_size_default" />

    <TextView
        android:id="@+id/cartItemProductPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:gravity="end"
        android:padding="@dimen/margin_default"
        android:text="1893 руб."
        android:textColor="@color/cyan"
        android:textStyle="bold" />

</RelativeLayout>