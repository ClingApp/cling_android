<resources>

    <style name="ClingTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarTitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="WhiteEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/background_rounded_white_edit</item>
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/semiBlue</item>
    </style>

    <style name="CyanEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/background_rounded_cyan_edit</item>
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RoundedButtonBuy" parent="android:Widget.Button">
        <item name="android:background">@drawable/selector_rounded_white</item>
        <item name="android:textColor">@color/text_selector_white</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="UnderlinedTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background_underline</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="UnderLinedAuthEditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background_white_underline</item>
        <item name="android:padding">7dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="TabButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ChangeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/text_selector_user_action</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Notice">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="GalleryItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:src">@drawable/dump_product_1</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/background_rounded_white_edit</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
