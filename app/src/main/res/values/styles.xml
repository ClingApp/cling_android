<resources>

    <style name="ClingTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarTitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="CyanEditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/background_rounded_white_edit</item>
        <item name="android:ems">10</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>

    <style name="RoundedButtonBuy" parent="android:Widget.Button">
        <item name="android:background">@drawable/selector_rounded_white</item>
        <item name="android:textColor">@color/text_selector_white</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="UnderlinedTextView" parent="android:Widget.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background_underline</item>
        <item name="android:padding">7dp</item>
    </style>

</resources>
